{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "businesses",
  "info": {
    "name": "business"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "caption": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "events": {
      "type": "json"
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "news": {
      "type": "json"
    },
    "users": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "businesses"
    },
    "employees": {
      "collection": "employee",
      "via": "businesses",
      "dominant": true
    },
    "email": {
      "type": "email"
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "operating_hours": {
      "type": "component",
      "repeatable": false,
      "component": "json.hours"
    },
    "web_links": {
      "type": "json",
      "default": {
        "youtube": "",
        "fundthefirst": "",
        "facebook": "",
        "instagram": "",
        "twitter": "",
        "paypal": "",
        "anchorfm": "",
        "spotify_podcast": "",
        "apple_podcast": ""
      }
    },
    "banner": {
      "type": "string"
    }
  }
}
