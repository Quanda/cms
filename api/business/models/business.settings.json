    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "business_hours": {
      "type": "json"
    },
    "contact_links": {
      "type": "json"
    },
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "description": {
      "type": "text"
    },
    "mission_statement": {
      "type": "text"
    },
    "additional_links": {
      "type": "json"
    },
    "events": {
      "type": "json"
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
