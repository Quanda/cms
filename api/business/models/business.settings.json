{
  "connection": "default",
  "collectionName": "businesses",
  "info": {
    "name": "business"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "contact_email": {
      "type": "email"
    },
    "business_hours": {
      "type": "json"
    },
    "social_media": {
      "type": "json"
    },
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "mission_statement": {
      "type": "text"
    },
    "additional_links": {
      "type": "json"
    }
  }
}
